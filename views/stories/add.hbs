<h1 class="py-2">Add New Story</h1>
<form action="/stories" method="POST">

{{!-- check for errors --}}
{{#if errors}}
    <div class="alert alert-danger">
        {{#each errors}}
            <p>{{this.msg}}</p>
        {{/each}}
    </div>
{{/if}}
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control"  name="title" id="" aria-describedby="emailHelpId" placeholder="">
    </div>
    <div class="form-group">
        <label for="story">Tell us your story</label>
        <textarea class="form-control" required name="content" id="story" rows="3"></textarea>
    </div>
   
    <div class="row">
        <input type="submit" value="Add story" class="btn btn-primary mr-3">
        <a href="/dashboard" class="btn btn-danger">Cancel</a>
    </div>
</form>